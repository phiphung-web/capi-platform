generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id            String        @id @default(cuid())
  name          String
  description   String?
  domain        String?
  autoFixLevel  String        @default("safe_defaults")
  createdAt     DateTime      @default(now())
  apiKeys       ApiKey[]
  destinations  Destination[]
  events        Event[]
  sources       Source[]
  members       ProjectMember[]
}

model ApiKey {
  id        String   @id @default(cuid())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  key       String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Destination {
  id            String         @id @default(cuid())
  project       Project        @relation(fields: [projectId], references: [id])
  projectId     String
  type          String
  config        Json
  isActive      Boolean        @default(true)
  healthStatus  String         @default("UNKNOWN")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  deliveryLogs  DeliveryLog[]
}

model Event {
  id            String         @id @default(cuid())
  project       Project        @relation(fields: [projectId], references: [id])
  projectId     String
  source        Source?        @relation(fields: [sourceId], references: [id])
  sourceId      String?
  eventName     String
  eventId       String
  eventTime     Int
  sourceTag     String         @default("unknown")
  userJson      Json
  dataJson      Json
  rawPayload    Json?
  qualityScore  Int            @default(0)
  qualityFlags  Json?
  createdAt     DateTime       @default(now())
  deliveryLogs  DeliveryLog[]
}

model DeliveryLog {
  id            String       @id @default(cuid())
  event         Event        @relation(fields: [eventId], references: [id])
  eventId       String
  destination   Destination  @relation(fields: [destinationId], references: [id])
  destinationId String
  status        String
  attempts      Int          @default(0)
  lastResponse  Json?
  lastError     String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Source {
  id          String   @id @default(cuid())
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  name        String
  eventKey    String   @unique
  type        String?
  mappingJson Json?
  seenFields  Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  events      Event[]
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  name           String?
  role           String           @default("OPERATOR")
  passwordHash   String
  isActive       Boolean          @default(true)
  projectMembers ProjectMember[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model ProjectMember {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  project     Project  @relation(fields: [projectId], references: [id])
  projectId   String
  projectRole String   @default("OPERATOR")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, projectId])
}
